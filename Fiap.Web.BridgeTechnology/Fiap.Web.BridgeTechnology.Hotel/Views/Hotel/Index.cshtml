@model List<Hootel>

@{
    ViewData["Title"] = "Index";
}

<h1>Hotéis</h1>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<a asp-action="cadastrar">Cadastrar</a>
<table class="table">
    <tr>
        <th>Codigo</th>
        <th>NomeHotel</th>
        <th>Endereco</th>
        <th>Disponivel</th>
        <th>PrecoDiaria</th>
        <th>DataInauguracao</th>
        <th>Unidade</th>
        <th>Quarto</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Codigo</td>
            <td>@item.NomeHotel</td>
            <td>@item.Endereco</td>
            <td>@(item.Disponivel?"Sim":"Não")</td>
            <td>@item.PrecoDiaria.ToString("n")</td>
            <td>@item.DataInauguracao.ToShortDateString()</td>
            <td>@item.Unidade</td>
            <td>@item.Quarto</td>

            <td>
                <a asp-route-id="@item.Codigo" asp-action="editar" class="btn btn-sm btn-primary">Editar</a>
                @*<a asp-route-id="@item.Codigo" asp-action="remover" class="btn btn-sm btn-danger">Remover</a>*@

                <button onclick="idHotel.value = @item.Codigo" type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#exampleModal">
                    Remover
                </button>

            </td>
        </tr>
    }
</table>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Deseja realmente remover o Hotel?
            </div>
            <div class="modal-footer">
                <form asp-action="remover">
                    <input type="hidden" name="id" id="idHotel" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                    <button type="submit" class="btn btn-danger">Sim</button>
                </form>
            </div>
        </div>
    </div>
</div>